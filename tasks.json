{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Generate GFXF project",
			"command": "cmake",
			"args": [
				".."
			],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"group": "build",
		},
		{
			"type": "shell",
			"label": "Build GFXF",
			"command": "cmake",
			"args": [
				"--build",
				"."
			],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"group": "build",
		}
	]
}